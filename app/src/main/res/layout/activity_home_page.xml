<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomePage">


    <TextView
        android:id="@+id/statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="50dp"
        android:paddingStart="0dp"
        android:text="Statistics"
        android:textColor="@color/blue_dark"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="180dp"
        android:background="@drawable/logout"
        app:layout_constraintBottom_toBottomOf="@+id/statistics"
        app:layout_constraintStart_toEndOf="@+id/statistics"
        app:layout_constraintTop_toTopOf="@+id/statistics" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/staticLayout"
        android:layout_width="308dp"
        android:layout_height="267dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statistics">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="204dp"
            android:layout_height="167dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewtotalcase"
            app:layout_constraintEnd_toEndOf="@+id/imageViewtotalcase"
            app:layout_constraintHorizontal_bias="0.532"
            app:layout_constraintStart_toStartOf="@+id/imageViewtotalcase"
            app:layout_constraintTop_toTopOf="@+id/imageViewtotalcase"
            app:layout_constraintVertical_bias="0.16"
            app:srcCompat="@drawable/case_shadow" />

        <ImageView
            android:id="@+id/imageViewtotalcase"
            android:layout_width="136dp"
            android:layout_height="104dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/total_case" />

        <TextView
            android:id="@+id/TotalCases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:text="Loading..."
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewtotalcase"
            app:layout_constraintStart_toStartOf="@+id/imageViewtotalcase"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.506" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="204dp"
            android:layout_height="167dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewdeadcase"
            app:layout_constraintEnd_toEndOf="@+id/imageViewdeadcase"
            app:layout_constraintHorizontal_bias="0.532"
            app:layout_constraintStart_toStartOf="@+id/imageViewdeadcase"
            app:layout_constraintTop_toTopOf="@+id/imageViewdeadcase"
            app:layout_constraintVertical_bias="0.16"
            app:srcCompat="@drawable/death_shadow" />

        <ImageView
            android:id="@+id/imageViewdeadcase"
            android:layout_width="136dp"
            android:layout_height="104dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/death_case" />

        <TextView
            android:id="@+id/DeathsCase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:text="Loading..."
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewdeadcase"
            app:layout_constraintStart_toStartOf="@+id/imageViewdeadcase"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.507" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="204dp"
            android:layout_height="167dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewrecoveredcase"
            app:layout_constraintEnd_toEndOf="@+id/imageViewrecoveredcase"
            app:layout_constraintHorizontal_bias="0.532
"
            app:layout_constraintStart_toStartOf="@+id/imageViewrecoveredcase"
            app:layout_constraintTop_toTopOf="@+id/imageViewrecoveredcase"
            app:layout_constraintVertical_bias="0.16
"
            app:srcCompat="@drawable/recoverd_shadow" />

        <ImageView
            android:id="@+id/imageViewrecoveredcase"
            android:layout_width="136dp"
            android:layout_height="104dp"
            android:layout_marginBottom="34dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/recovered_case" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="204dp"
            android:layout_height="167dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewactivecase"
            app:layout_constraintEnd_toEndOf="@+id/imageViewactivecase"
            app:layout_constraintHorizontal_bias="0.532
"
            app:layout_constraintStart_toStartOf="@+id/imageViewactivecase"
            app:layout_constraintTop_toTopOf="@+id/imageViewactivecase"
            app:layout_constraintVertical_bias="0.16
"
            app:srcCompat="@drawable/active_shadow" />

        <ImageView
            android:id="@+id/imageViewactivecase"
            android:layout_width="136dp"
            android:layout_height="104dp"
            android:layout_marginBottom="34dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/active_case" />

        <TextView
            android:id="@+id/Recovered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:text="Loading..."
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewrecoveredcase"
            app:layout_constraintStart_toStartOf="@+id/imageViewrecoveredcase"
            app:layout_constraintTop_toTopOf="@+id/imageViewrecoveredcase"
            app:layout_constraintVertical_bias="0.537" />

        <TextView
            android:id="@+id/ActiveCases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:text="Loading..."
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageViewactivecase"
            app:layout_constraintTop_toTopOf="@+id/imageViewactivecase"
            app:layout_constraintVertical_bias="0.394" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_nav" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="489dp"
        android:layout_height="235dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.31"
        app:srcCompat="@drawable/learn_more_button_shadow" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="308dp"
        android:layout_height="144dp"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/staticLayout"
        app:srcCompat="@drawable/learn_more_button" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="136dp"
        android:layout_height="69dp"
        android:layout_marginStart="-8dp"
        android:layout_marginBottom="-5dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/shield_shadow" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="156dp"
        android:layout_height="136dp"
        android:layout_marginStart="-25dp"
        android:layout_marginTop="-30dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/shield" />




</androidx.constraintlayout.widget.ConstraintLayout>